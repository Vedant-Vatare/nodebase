{
	"name": "@nodebase/db",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "tsc",
		"build": "tsc -b  && tsc-alias",
		"start": "node dist/index.js",
		"db:push": "dotenv -e ../../.env -- drizzle-kit push",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:migrate": "dotenv -e ../../.env -- drizzle-kit migrate"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"dependencies": {
		"@nodebase/shared": "workspace:*",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"pg": "^8.17.2"
	},
	"devDependencies": {
		"@nodebase/ts-config": "workspace:*",
		"@types/node": "^25.0.10",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8"
	}
}
